<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/timo3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editSummoner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/editSummoner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="소환사명 : "
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"/>

    <EditText
        android:id="@+id/editSummoner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="16"
        android:textSize="25dp"
        android:hint="소환사명"
        android:gravity="center"
        android:ems="6"
        app:layout_constraintBottom_toBottomOf="@+id/editSummoner"
        app:layout_constraintLeft_toRightOf="@id/editSummoner"
        app:layout_constraintTop_toTopOf="@id/editSummoner" />

    <TextView
        android:id="@+id/edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름 : "
        app:layout_constraintTop_toBottomOf="@id/editSummoner"
        app:layout_constraintLeft_toLeftOf="@id/editSummoner"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/edit_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생년월일 : "
        app:layout_constraintTop_toBottomOf="@id/edit_name"
        app:layout_constraintLeft_toLeftOf="@id/editSummoner"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/edit_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지역 : "
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/edit_age"
        app:layout_constraintLeft_toLeftOf="@id/edit_age"/>

    <TextView
        android:id="@+id/edit_writename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textSize="20dp"
        android:hint="이름"
        app:layout_constraintBottom_toBottomOf="@+id/edit_name"
        app:layout_constraintLeft_toRightOf="@id/edit_name"
        app:layout_constraintTop_toTopOf="@id/edit_name" />
    <TextView
        android:id="@+id/edit_writeage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textSize="20dp"
        android:hint="생년월일"
        app:layout_constraintBottom_toBottomOf="@+id/edit_age"
        app:layout_constraintLeft_toRightOf="@id/edit_age"
        app:layout_constraintTop_toTopOf="@id/edit_age" />

    <EditText
        android:id="@+id/edit_writearea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textSize="20dp"
        android:hint="지역"
        android:gravity="center"
        android:ems="7"
        app:layout_constraintBottom_toBottomOf="@+id/edit_area"
        app:layout_constraintLeft_toRightOf="@id/edit_area"
        app:layout_constraintTop_toTopOf="@id/edit_area" />
    <TextView
        android:id="@+id/edit_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="이메일 : "
        app:layout_constraintTop_toBottomOf="@+id/edit_area"
        app:layout_constraintLeft_toLeftOf="@id/edit_area"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/edit_writeemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="이메일"
        android:gravity="center"
        android:ems="11"
        app:layout_constraintTop_toTopOf="@+id/edit_email"
        app:layout_constraintLeft_toRightOf="@id/edit_email"
        app:layout_constraintBottom_toBottomOf="@id/edit_email"
        android:layout_marginLeft="8dp"/>

    <Button
        android:id="@+id/edit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정 완료"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>