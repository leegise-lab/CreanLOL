<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD6FD">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="크린롤"
        android:textSize="90dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <EditText
        android:id="@+id/id"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:hint="아이디"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.35"/>
    <EditText
        android:id="@+id/pw"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="비밀번호"
        app:layout_constraintStart_toStartOf="@+id/id"
        app:layout_constraintTop_toBottomOf="@id/id" />

    <Button
        android:id="@+id/button"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:text="로그인"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintBottom_toBottomOf="@id/pw"
        app:layout_constraintLeft_toRightOf="@id/id" />

    <Button
        android:id="@+id/member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="@+id/pw"
        app:layout_constraintTop_toBottomOf="@id/pw"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@null"/>
    <Button
        android:id="@+id/findidpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID/비밀번호 찾기"
        android:textSize="17dp"
        app:layout_constraintStart_toEndOf="@id/member"
        app:layout_constraintTop_toBottomOf="@id/pw"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@null" />

</androidx.constraintlayout.widget.ConstraintLayout>