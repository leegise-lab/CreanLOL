<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

<androidx.constraintlayout.widget.ConstraintLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    >
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="회원 가입"
        android:textColor="#000000"
        android:textSize="30pt"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <ImageView
        android:id="@+id/imageButton"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintLeft_toLeftOf="@id/textView2"
        app:layout_constraintRight_toRightOf="@id/textView2"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(이름과 생년월일은 사진을 통해서만 입력할 수 있습니다)"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:layout_constraintRight_toRightOf="@id/imageButton"
        app:layout_constraintLeft_toLeftOf="@id/imageButton"/>
    <EditText
        android:id="@+id/memberid"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="13"
        android:inputType="textPersonName"
        android:hint="아이디"
        android:maxLength="20"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/text2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/edge"
        android:layout_marginLeft="10dp"
        android:paddingLeft="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디는 영문 대소문자, 숫자만 입력가능합니다."
        android:textColor="@color/Red"
        opencv:layout_constraintTop_toBottomOf="@id/memberid"
        opencv:layout_constraintLeft_toLeftOf="@id/memberid"/>
    <Button
        android:id="@+id/overlapbt"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="중복 검사"
        app:layout_constraintTop_toTopOf="@id/memberid"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@id/memberid"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#EAEAEA" />

<!--    <TextView-->
    <TextView
        android:id="@+id/name"
        android:layout_width="171dp"
        android:layout_height="40dp"
        android:ems="8"
        android:hint="이름"
        android:maxLength="9"
        android:gravity="left|center"
        app:layout_constraintTop_toBottomOf="@id/pw2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/edge"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="5dp"
        android:layout_marginTop="10dp"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/membersummonor"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edge"
        android:ems="8"
        android:hint="소환사 명"
        android:maxLength="9"
        android:paddingLeft="5dp"
        app:layout_constraintRight_toRightOf="@id/pw2"
        app:layout_constraintTop_toBottomOf="@id/age" />

    <EditText
        android:id="@+id/pw"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="비밀번호"
        android:maxLength="16"
        app:layout_constraintTop_toBottomOf="@id/memberid"
        android:background="@drawable/edge"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="5dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호는 특수문자, 숫자를 포함해 8자리 이상 입력해주세요."
        android:textColor="@color/Red"
        opencv:layout_constraintTop_toBottomOf="@id/pw"
        opencv:layout_constraintLeft_toLeftOf="@id/pw"/>

    <EditText
        android:id="@+id/pw2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="비밀번호 확인"
        android:maxLength="16"
        app:layout_constraintTop_toBottomOf="@id/pw"
        android:background="@drawable/edge"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="5dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/x"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintRight_toRightOf="@id/pw2"
        app:layout_constraintTop_toTopOf="@id/pw2"
        app:layout_constraintBottom_toBottomOf="@id/pw2"
        android:textColor="#FF0000" />

    <EditText
        android:id="@+id/area"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/edge"
        android:ems="8"
        android:hint="지역"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:paddingLeft="5dp"
        android:layout_marginTop="10dp"/>

    <!--    <TextView-->
    <TextView
        android:id="@+id/age"
        android:layout_width="171dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edge"
        android:ems="8"
        android:hint="생년월일(6자리)"
        android:inputType="number"
        android:maxLength="6"
        android:paddingLeft="5dp"
        android:gravity="left|center"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="@id/membersummonor"
        app:layout_constraintRight_toRightOf="@id/membersummonor"
        app:layout_constraintTop_toBottomOf="@id/pw2"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/edge"
        android:ems="8"
        android:hint="이메일 주소"
        android:inputType="textEmailAddress"
        android:paddingLeft="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/area" />
    <Button
        android:id="@+id/join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="회원 가입"
        app:layout_constraintTop_toBottomOf="@id/address"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>