<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/timo3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Summoner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/Summoner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="소환사명 : "
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"/>
    <TextView
        android:id="@+id/Summoner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="16"
        android:textSize="25dp"
        android:hint="소환사명"
        app:layout_constraintBottom_toBottomOf="@+id/Summoner"
        app:layout_constraintLeft_toRightOf="@id/Summoner"
        app:layout_constraintTop_toTopOf="@id/Summoner" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름 : "
        app:layout_constraintTop_toBottomOf="@id/Summoner"
        app:layout_constraintLeft_toLeftOf="@id/Summoner"
        android:layout_marginTop="15dp"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생년월일 : "
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintLeft_toLeftOf="@id/Summoner"
        android:layout_marginTop="15dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지역 : "
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/age"
        app:layout_constraintLeft_toLeftOf="@id/age"/>

    <TextView
        android:id="@+id/writename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textSize="20dp"
        android:hint="이름"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        app:layout_constraintLeft_toRightOf="@id/name"
        app:layout_constraintTop_toTopOf="@id/name" />

    <TextView
        android:id="@+id/writeage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:hint="생년월일"
        app:layout_constraintBottom_toBottomOf="@+id/age"
        app:layout_constraintLeft_toRightOf="@id/age"
        app:layout_constraintTop_toTopOf="@id/age"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/writearea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textSize="20dp"
        android:hint="지역"
        app:layout_constraintLeft_toRightOf="@id/area"
        app:layout_constraintTop_toTopOf="@id/area" />
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="이메일 : "
        app:layout_constraintTop_toBottomOf="@+id/area"
        app:layout_constraintLeft_toLeftOf="@id/area"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/writeemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="이메일"
        app:layout_constraintTop_toTopOf="@+id/email"
        app:layout_constraintLeft_toRightOf="@id/email"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/checktv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintBottom_toTopOf="@id/editbt"
        app:layout_constraintLeft_toLeftOf="@id/email"
        android:layout_marginTop="30dp"
        android:hint="타인이 나를 검색한 수는 몇 번입니다."/>
    <Button
        android:id="@+id/editbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정하기"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:id="@+id/changepw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 변경하기"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="@id/editbt"
        app:layout_constraintBottom_toBottomOf="@id/editbt"
        app:layout_constraintLeft_toLeftOf="@id/email"
        android:textColor="#FF0000"/>
</androidx.constraintlayout.widget.ConstraintLayout>