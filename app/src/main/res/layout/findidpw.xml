<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD6FD">

    <TextView
    android:id="@+id/textid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="아이디 찾기"
    android:textSize="20pt"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="130dp"
    android:textColor="#000000" />
    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="이름을 입력하세요"
        android:inputType="textPersonName"
        android:layout_below="@id/textid"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp" />
    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="이메일을 입력하세요"
        android:inputType="textEmailAddress"
        android:layout_below="@id/name"
        android:layout_marginLeft="30dp" />
    <Button
        android:id="@+id/findid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 찾기"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/pwtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 찾기"
        android:layout_below="@id/findid"
        android:layout_centerHorizontal="true"
        android:textSize="20pt"
        android:layout_marginTop="30dp"
        android:textColor="#000000" />
    <EditText
        android:id="@+id/pwname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="이름을 입력하세요"
        android:inputType="textPersonName"
        android:layout_below="@id/pwtext"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/pwemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="이메일을 입력하세요"
        android:inputType="textEmailAddress"
        android:layout_below="@id/pwname"
        android:layout_marginLeft="30dp" />
    <Button
        android:id="@+id/findpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 찾기"
        android:layout_below="@id/pwemail"
        android:layout_centerHorizontal="true" />
</RelativeLayout>